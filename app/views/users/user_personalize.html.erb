<div class="col s4 offset-s4" id="logo"><%= image_tag('boozt_logo_orange.png', options={class: "logo-nav-bar"}) %></div>
<div class="container background">
	<div class="row">
		<div class="card-panel white" style="margin-top: 50px">
			<h1 class="center">New User</h1>
			<br><br><br>

			<div class="row">
				<%= form_for(@user) do |f| %>
					<div class="row">
					  <div class="col l5 offset-l1 s10 offset-s1">
					    <b>Start Time</b> <br><%= select_tag("user[boozt_start]", options_for_select(["00:00", "01:00", "02:00", "03:00", "04:00", "05:00", "06:00", "07:00", "08:00", "09:00", "10:00", "11:00", "12:00", "13:00", "14:00", "15:00", "16:00", "17:00", "18:00", "19:00", "20:00", "21:00", "22:00", "23:00"]), {include_blank: '--Select an hour--'}) %>
					    <%= f.text_field :first_name, placeholder: "First Name"  %>
					  </div>
					  <button type="submit" class="button btn-large" style="line-height: 15px">Submit&nbsp&nbsp&nbsp<i class="material-icons">send</i></button>
					</div>
				<% end %>
				</div>

			<%= link_to 'Back', users_path %>
		</div>
	</div>
</div>